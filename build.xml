<?xml version="1.0" encoding="UTF-8"?>
<project name="flickbook" default="compile" basedir=".">
    <description>
        Build file for jQuery flickbook plugin
    </description>
 
  <taskdef name="jscomp" classname="com.google.javascript.jscomp.ant.CompileTask"
           classpath="../../../cmd/closure/compiler.jar" />

  <target name="compile">
    
    <jscomp compilationLevel="simple" warning="verbose" 
            debug="false" output="./src/jquery.flickbook.min.js" >

      <externs dir="./">
        <file name="externs.js"/>
      </externs>

      <sources dir="./src">
        <file name="jquery.flickbook.js"/>
      </sources>

    </jscomp>
    
  </target>

</project>